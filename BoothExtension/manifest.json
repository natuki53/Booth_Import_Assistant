{
  "manifest_version": 3,
  "name": "BOOTH Import Assistant",
  "version": "0.1.0",
  "description": "BOOTH購入リストをUnityに同期するための拡張機能",
  "permissions": [
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "https://manage.booth.pm/*",
    "https://accounts.booth.pm/*",
    "https://booth.pm/*",
    "https://*.booth.pm/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://manage.booth.pm/library*",
        "https://accounts.booth.pm/library*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

