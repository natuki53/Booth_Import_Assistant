{
  "manifest_version": 3,
  "name": "BOOTH Import Assistant",
  "version": "0.1.2",
  "description": "BOOTH購入リストをUnityに同期するための拡張機能",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "downloads"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://manage.booth.pm/library*",
        "https://accounts.booth.pm/library*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}

